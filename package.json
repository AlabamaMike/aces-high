{
  "name": "aces-high",
  "version": "0.1.0",
  "description": "HD Roguelike WWII Arcade Shooter",
  "scripts": {
    "build": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "dev": "webpack serve --mode development",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "wasm-pack test --headless --chrome",
    "test:unit:firefox": "wasm-pack test --headless --firefox",
    "test:integration": "playwright test",
    "test:integration:debug": "playwright test --debug",
    "test:performance": "node tests/performance/run-performance-tests.js",
    "test:coverage": "wasm-pack test --headless --chrome -- --coverage && playwright test --reporter=html",
    "test:watch": "wasm-pack test --headless --chrome -- --watch",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write 'src/**/*.{js,json,html,css}'",
    "clean": "rimraf dist pkg",
    "pretest": "npm run build:test",
    "build:test": "wasm-pack build --dev --target web"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@wasm-tool/wasm-pack-plugin": "^1.7.0",
    "compression-webpack-plugin": "^10.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.54.0",
    "html-webpack-plugin": "^5.5.4",
    "playwright": "^1.40.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "workbox-webpack-plugin": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/aces-high.git"
  },
  "keywords": [
    "game",
    "wasm",
    "webassembly",
    "rust",
    "roguelike",
    "shooter"
  ],
  "author": "Aces High Team",
  "license": "MIT"
}
